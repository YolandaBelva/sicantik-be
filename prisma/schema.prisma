generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model SocialPost {
  id         String   @id @default(uuid())
  title      String
  content    String
  username   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Flashcard {
  id         String   @id @default(uuid())
  question   String
  answer     String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model WorkSchedule {
  id             String   @id @default(uuid())
  title          String
  description    String
  start_datetime DateTime
  end_datetime   DateTime
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt
}